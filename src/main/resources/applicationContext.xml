<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:property-placeholder location="musicPlayer.properties"/>
    <bean id="musicBean"
          class="org.example.ClassicalMusic">
    </bean>
    <bean id="classicalMusic" class="org.example.ClassicalMusic"/>
    <bean id="rockMusic" class="org.example.RockMusic"/>
    <bean id="jazzMusic" class="org.example.JazzMusic"/>

    <bean id="musicPlayer" class="org.example.MusicPlayer">
        <property name="musicList">
            <list>
                <ref bean="classicalMusic"/>
                <ref bean="rockMusic"/>
                <ref bean="jazzMusic"/>
            </list>
        </property>

        <property name="name" value="${music.name}"/>
        <property name="volume" value="${music.volume}"/>
    </bean>

</beans>